# Database Configuration
MONGODB_URI=mongodb://localhost:27017/it-rnd-dashboard
NODE_ENV=development
PORT=3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# API Keys and Credentials
SERVICENOW_URL=https://your-instance.servicenow.com
SERVICENOW_USERNAME=your-servicenow-username
SERVICENOW_PASSWORD=your-servicenow-password

VCENTER_URL=https://your-vcenter-server.com
VCENTER_USERNAME=your-vcenter-username
VCENTER_PASSWORD=your-vcenter-password

JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token

HYPERV_HOST=your-hyperv-host.com
HYPERV_USERNAME=your-hyperv-username
HYPERV_PASSWORD=your-hyperv-password

# Data Collection Settings
COLLECTION_INTERVAL_MINUTES=15
DAILY_COLLECTION_HOUR=2

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
